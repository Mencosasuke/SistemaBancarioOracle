
@{
    ViewBag.Title = "AbonoCuenta";
    Layout = "~/Views/Shared/_Layout.cshtml";
    String cuenta = ViewBag.Cuenta as String;
    if (!(cuenta.Length > 0))
    {
        Response.Redirect(Url.Action("Index", "Home"));
    }
    Decimal monto = 0;
}
<div class="page-header">
    <h2>Abonar a Cuenta <small>@cuenta</small></h2>
</div>
@using (Html.BeginForm("AbonoCuenta", "Home", FormMethod.Post, new { @class = "form-group col-sm-6" }))
{
    @Html.HiddenFor(c => cuenta);
    
    <div class="form-group">
        @Html.Label("Monto")
        @Html.TextBoxFor(m => monto, new { @class = "form-control", placeholder = "0.00" })
        @Html.ValidationMessageFor(m => monto, "", new { @class = "text-danger" })
    </div>

    <div class="form-group text-left">
        <button class="btn btn-success" title="Aceptar" type="submit">Aceptar</button>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}